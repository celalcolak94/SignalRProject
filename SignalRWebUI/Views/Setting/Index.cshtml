
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UserEditDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bilgi ve Şifre Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Adınız</label>
                                <input asp-for="Name" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="surname">Soyadınız</label>
                                <input asp-for="Surname" type="text" class="form-control" id="surname">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresiniz</label>
                                <input asp-for="Mail" type="email" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="username">Kullanıcı Adınız</label>
                                <input asp-for="Username" type="text" class="form-control" id="username">
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input asp-for="Password" type="password" class="form-control" id="password">
                            </div>
                            <div class="form-group">
                                <label for="repassword">Şifre Tekrar</label>
                                <input asp-for="RePassword" type="password" class="form-control" id="repassword">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Profil Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
