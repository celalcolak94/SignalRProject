@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod Oluşturma Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="QRCode" asp-action="CreateQrCode">
                    <input type="text" name="value" />
                    <input type="submit" name="QR Kod Oluştur" class="btn btn-warning" />
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                @if (@ViewBag.QrCodeImage != null)
                {
                    <img src="@ViewBag.QrCodeImage" alt="" style="width:400px;height:400px;" />
                }
            </div>
        </div>
    </div>
</div>