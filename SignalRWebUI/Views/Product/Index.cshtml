@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultProductDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Price</td>
                                        @if (item.ProductStatus)
                                        {
                                            <td><a asp-controller="Product" asp-action="ProductStatusChange" asp-route-id="@item.ProductID" style="color:green;">Stokta var</a></td>
                                        }
                                        else
                                        {
                                            <td><a asp-controller="Product" asp-action="ProductStatusChange" asp-route-id="@item.ProductID" style="color:red;">Stokta yok</a></td>
                                        }
                                        <td><a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
