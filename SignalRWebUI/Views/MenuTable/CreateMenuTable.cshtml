
@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateMenuTableDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="menutablename">Masa Adını Giriniz</label>
                                <input asp-for="Name" type="text" class="form-control" id="menutablename">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Masayı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>