
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateMailDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="receivermail">Alıcı Mail Adresi</label>
                                <input asp-for="ReceiverMail" type="text" class="form-control" id="receivermail">
                            </div>
                            <div class="form-group">
                                <label for="subject">Konu</label>
                                <input asp-for="Subject" type="text" class="form-control" id="subject">
                            </div>
                            <div class="form-group">
                                <label for="body">Mesajınız</label>
                                <textarea rows="5" asp-for="Body" id="body" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Mail Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
