
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateBookingDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input asp-for="BookingName" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input asp-for="Phone" type="text" class="form-control" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresi</label>
                                <input asp-for="Mail" type="email" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="personcount">Kişi Sayısı</label>
                                <input asp-for="PersonCount" type="number" class="form-control" id="personcount">
                            </div>
                            <div class="form-group">
                                <label for="date">Rezervasyon Tarihi</label>
                                <input asp-for="Date" type="date" class="form-control" id="date">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Rezervasyon Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

