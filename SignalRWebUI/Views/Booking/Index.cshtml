
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultBookingDto>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<div class="content">
    <div class="container-fluid">

        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5125/SignalRHub").build();

                connection.start().then(() => {
                    setInterval(() => {
                        connection.invoke("GetBookingList");
                    }, 1000);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveBookingList", (value) => {
                    console.log(value);
                    let tablehtml = `<table class="table mt-3">
                                                <thead>
                                                <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Ad Soyad</th>
                                                <th scope="col">Telefon</th>
                                                <th scope="col">Kişi Sayısı</th>
                                                <th scope="col">Tarih</th>
                                                <th scope="col">Rezervasyon Durumu</th>
                                                <th scope="col">Sil</th>
                                                <th scope="col">Güncelle</th>
                                                </tr>
                                                </thead>
                                                <tbody>`
                    $.each(value, (index, item) => {
                        tablehtml += `<tr>
                                      <td>${item.bookingID}</td>
                                      <td>${item.bookingName}</td>
                                      <td>${item.phone}</td>
                                      <td>${item.personCount}</td>
                                      <td>${item.date}</td>
                                      <td>Rezervasyon Alındı</td>
                                      <td><a href="/Booking/DeleteBooking/${item.bookingID}" class="btn btn-outline-danger">Sil</a></td>
                                      <td><a href="/Booking/UpdateBooking/${item.bookingID}" class="btn btn-outline-success">Güncelle</a></td>
                                      </tr>`
                    });
                    tablehtml += "</tbody></table>";
                    $("#bookingList").html(tablehtml);
                });
            });

        </script>

        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Rezervasyon ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div id="bookingList"></div>
                        <a asp-controller="Booking" asp-action="CreateBooking" class="btn btn-outline-primary">Yeni Rezervasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
