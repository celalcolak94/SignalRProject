
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateAboutDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="AboutID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlığı Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görselin Url'ini Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklamayı Giriniz</label>
                                <textarea asp-for="Description" class="form-control" rows="5" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>