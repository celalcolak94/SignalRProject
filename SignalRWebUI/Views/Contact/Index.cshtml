
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<ResultContactDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanı ile ilgili işlemleri yapabilirsiniz. <strong>Tema bütünlüğü için sadece 1 tane iletişim alanı oluşturmayı unutmayın.</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Açıklama</th>
                                    <th scope="col">Açık Günler</th>
                                    <th scope="col">Açık Günler Açıklama</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterTitle</td>
                                        <td>@item.FooterDescription</td>
                                        <td>@item.OpenDays</td>
                                        <td>@item.OpenDaysDescription</td>
                                        <td>@item.OpenHours</td>
                                        <td><a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-primary">Yeni İletişim Yazısı Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
