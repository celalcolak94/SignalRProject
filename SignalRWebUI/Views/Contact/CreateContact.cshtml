
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateContactDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgisi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Lokasyonu Giriniz</label>
                                <input asp-for="Location" type="text" class="form-control" id="location">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon Numarası Giriniz</label>
                                <input asp-for="Phone" type="text" class="form-control" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresi Giriniz</label>
                                <input asp-for="Mail" type="email" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea asp-for="FooterDescription" class="form-control" rows="5" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgi Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>