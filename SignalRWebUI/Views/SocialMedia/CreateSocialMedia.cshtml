
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateSocialMediaDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Hesabı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlığı Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon Giriniz</label>
                                <input asp-for="Icon" type="text" class="form-control" id="icon">
                            </div>
                            <div class="form-group">
                                <label for="url">Link Giriniz</label>
                                <input asp-for="Url" type="text" class="form-control" id="url">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Hesabını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>