@{
    Layout = null;
}

@model CreateBookingDto

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeaderPartialComponent")

<body class="sub_page">
    @await Component.InvokeAsync("_MenuNavbarPartialComponent")

    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input asp-for="BookingName" type="text" class="form-control" placeholder="Adınız Soyadınız" />
                            </div>
                            <div>
                                <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon Numaranız" />
                            </div>
                            <div>
                                <input asp-for="Mail" type="email" class="form-control" placeholder="Mail Adresiniz" />
                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="0" disabled selected>
                                        Kaç Kişisiniz?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                </select>
                            </div>
                            <div>
                                <input asp-for="Date" type="date" class="form-control">
                            </div>
                            <div class="btn_box">
                                <button>
                                    Yerinizi Ayırtın
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")
    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")
</body>
</html>