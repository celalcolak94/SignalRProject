
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateTestimonialDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Müşteri Adını Giriniz</label>
                                <input asp-for="TestimonialName" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Müşteri Ünvanını Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Müşteri Resim Dosya Yolunu Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="comment">Müşteri Yorumunu Giriniz</label>
                                <input asp-for="Comment" type="text" class="form-control" id="comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Yorumu Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
