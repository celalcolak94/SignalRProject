
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<ResultTestimonialDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Müşteri Yorum Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Müşterilerin yaptığı yorumlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestimonialID</td>
                                        <td>@item.TestimonialName</td>
                                        <td>@item.Status</td>
                                        <td><a asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="Testimonial" asp-action="CreateTestimonial" class="btn btn-outline-primary">Yeni Müşteri Yorumu Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>