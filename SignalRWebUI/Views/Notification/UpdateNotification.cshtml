
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateNotificationDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="NotificationID" />
                            <div class="form-group">
                                <label for="type">Bildirim Türü</label>
                                <input asp-for="Type" type="text" class="form-control" id="type">
                            </div>
                            <div class="form-group">
                                <label for="type">Bildirim İkonu</label>
                                <input asp-for="Icon" type="text" class="form-control" id="type">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" id="description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Bildirimi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
