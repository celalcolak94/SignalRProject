
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateDiscountDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirimli Ürün Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID" />
                            <div class="form-group">
                                <label for="title">Ürün Adını Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="amount">Ürün İndirim Oranını Giriniz</label>
                                <input asp-for="Amount" type="text" class="form-control" id="amount">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Ürün Görselini Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün Açıklamasını Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İndirimli Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>