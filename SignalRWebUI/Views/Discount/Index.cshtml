
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultDiscountDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün indirimli ürünleri aşağıda yer almaktadır. Tema bütünlüğü için <strong>2 adet</strong> indirimli ürün seçiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Durum Güncelle</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        @if (item.Status)
                                        {
                                            <td style="color:green;">Aktif</td>
                                        }else
                                        {
                                            <td style="color:red;">Pasif</td>
                                        }

                                        @if (item.Status)
                                        {
                                            <td><a asp-controller="Discount" asp-action="ChangeStatus" asp-route-id="@item.DiscountID" class="btn btn-outline-dark">Pasif Yap</a></td>
                                        }else
                                        {
                                            <td><a asp-controller="Discount" asp-action="ChangeStatus" asp-route-id="@item.DiscountID" class="btn btn-outline-success">Aktif Yap</a></td>
                                        }
                                        <td><a asp-controller="Discount" asp-action="DeleteDiscount" asp-route-id="@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a asp-controller="Discount" asp-action="UpdateDiscount" asp-route-id="@item.DiscountID" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="Discount" asp-action="CreateDiscount" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>